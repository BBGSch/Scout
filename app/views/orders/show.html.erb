<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= cl_image_tag @order.training_session.training.photos.first.key, height: 300, width: 400, crop: :fill %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>SESSION</strong> <%= @order.training_session.training.name %> <%= @order.training_session.time %>[<%= @order.training_session_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount_cents %></li>
        </li>
      </ul>
    </div>
  </div>
</div>


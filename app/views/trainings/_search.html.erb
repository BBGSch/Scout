<section class="search-sec">
  <div class="container">
    <form class="search_form" action=<%=trainings_path%> method="get">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 p-0">
              <input id="search-location" type="text" class="form-control search-slt" placeholder="City" name="location">
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
              <select name="stars" class="form-control search-slt">
                <% 5.times do |num|%>
                <option><%= num + 1 %> star</option>
                <% end %>
              </select>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
              <select name="category" class="form-control search-slt">
                <option>All</option>
                <% categories.each do |category|%>
                <option><%= category %></option>
                <% end %>
              </select>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12 p-0">
              <button type="submit" class="btn search-btn">Search</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

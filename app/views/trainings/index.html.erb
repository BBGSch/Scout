
<div style="margin-left: 50px;">

      <div class="row">
        <div class="col-md-6 col-sm-12">
          <p id="notice"><%= notice %></p>

          <h1 style="color: white">Workouts</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-sm-12 d-flex">
        <div><%= render "components/trainingindex_search", categories: @categories %></div>
      </div>
      </div>

      <div class="row">
        <div class="col-md-6 col-sm-12">
          <% if @trainings.size == 0 %>
          <h5>No training sessions available</h5>
          <% end %>
          <% @training_sessions.each do |training_session| %>

            <%= link_to training_path(training_session.training) do %>
            <div style="padding-right: 50px; padding-bottom: 15px;" >

            <%= render "components/training_session_card", training_session: training_session %>
            </div>
            <% end %>
          <% end %>
          </div>
        </div>
      <br>

</div>
    <%= render 'training_sessions/map', markers: @markers %>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <p id="notice"><%= notice %></p>

          <h1>Workouts</h1>
        </div>
      </div>
      <div class="row">
        <div><%= render "search", categories: @categories %></div>
      </div>

      <div class="row">
        <div class="col-md-12">

          <% @trainings.each do |training| %>
          <%= link_to training_path(training) do %>
          <div class="card-product">
            <%= cl_image_tag training.photos.first.key, height: 600, width: 800, crop: :fill %>
            <div class="card-product-infos">
              <h2><%= training.name %></h2>
              <p><%= training.description %></p>
              <p><%= training.category %></p>
              <p><%= training.duration %> <%= training.price %></p>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
      <br>

    </div>
    <div class="col-md-6">
        <%= render 'training_sessions/map', markers: @markers %>
    </div>
  </div>
</div>

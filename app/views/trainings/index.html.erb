<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <p id="notice"><%= notice %></p>

          <h1>Workouts</h1>
        </div>
      </div>
      <div class="row">
        <div><%= render "search", categories: @categories %></div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <% if @trainings.size == 0 %>
          <h5>No training sessions available</h5>
          <% end %>
          <% TrainingSession.all.each do |training_session| %>
            <%= link_to training_path(training_session.training) do %>
              <div class="card-product">
                <%= cl_image_tag training_session.training.photos.first.key, height: 600, width: 800, crop: :fill %>
                <div class="card-product-infos">
                  <h2><%= training_session.training.name %> <%= training_session.time.strftime("%b %e, %l:%M %p, %G") %> <%= training_session.training.price %>â‚¬</h2>
                  <p><%= training_session.training.description %></p>
                  <p><%= training_session.training.duration.strftime("%H:%M") %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <br>

    </div>
    <%= render 'training_sessions/map', markers: @markers %>
  </div>
</div>

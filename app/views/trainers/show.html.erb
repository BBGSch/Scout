

<div class="container">





 <div class="class d-flex justify-content-center">
  <div class="col-md-8 col-sm-12">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item text-center active">
          <%= cl_image_tag @trainer.photos.first.key, height: 1000, crop: :fill %>
       </div>
       <div class="carousel-item text-center">
         <%= cl_image_tag @trainer.photos.first.key, height: 300, width: 400, crop: :fill %>
       </div>
       <div class="carousel-item text-center">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/FZrHoAUkHpE" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
       </div>
     </div>
     <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

        <h1 class="align-center"><%= @trainer.name %> </h1>
      </div>
   </div>

  <div class="row">
    <div class="col-md-6 col-sm-12">
      <div class="data-card white">
       <% if @trainer == current_user  %>
       <h2> Welcome <%= @trainer.name %> </h2>
       <%= link_to "Edit training", edit_trainer_path(@trainer), class:"btn btn-primary" %>
       <%= link_to "Create new training", new_trainer_training_path(@trainer), class:"btn btn-primary" %>
       <%=@trainer.name%> has taught <%=@trainer.training_sessions.count%> classes.
       <%=@trainer.bio%>
       <%=@trainer.rating%>
       <% else %>
       <h2> <%= @trainer.name %> </h2>
       <%=@trainer.name%> has taught <%=@trainer.training_sessions.count%> classes.
       <%=@trainer.bio%>
       <%=@trainer.rating%>
       <% end %>
     </div>
   </div>
   <div class="col-md-6 col-sm-12">
    <div class="data-card blue">
      <% cl_image_tag @trainer.photos.first.key, height: 600, width: 800, crop: :fill %>
    </div>
  </div>
  <div class="col-md-9 col-sm-12">
    <div class="data-card blue">
      <% if @trainer.trainings.present? %>
      <% @trainer.training_sessions.each do |training_session| %>
      <%=render "components/schedule", training_session: training_session%>
      <%end%>
      <% else %>
      <h1>No schedule available</h1>
      <% end %>
    </div>
  </div>
  <div class="col-md-3 col-sm-12">
    <div class="data-card white">
      <ul>
        <li><%=@trainer.name %></li>
        <li><%=@trainer.gender%></li>
        <li><%=@trainer.age%></li>
      </ul>
      <%=@trainer.rating%> 5 stars
    </div>
  </div>

 <div class="col-md-12 col-sm-12">
  <div class="data-card blue">
    <h4>My Classes:</h4>
    <% @trainings.each do |training| %>
    <%= link_to training_path(training) do %>
    <%= render "components/trainer-trainings-card", training: training %>
    <% end %>
    <% end %>
  </div>
</div>

<div class="col-md-6 col-sm-12">
  <div class="data-card white">
    <%= render "reviews/list", reviews: @reviews %>
  </div>
</div>

<div class="col-md-6 col-sm-12">
  <div class="data-card blue">
    <% render "training_sessions/map",  markers: @markers %>
  </div>
</div>

</div>
</div>


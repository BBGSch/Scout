<section class="search-sec">
  <div class="container">
    <form class="search_form" action=<%=trainers_path%> method="get">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
              <input id="search-location" type="text" class="form-control search-slt" placeholder="City" name="location">
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12 p-0">
              <div class="form-control search-slt dropdown">
                <button class="btn btn-default dropdown-toggle" type="button"
                id="dropdownMenu1" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="true">
                Trainer Gender
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu checkbox-menu allow-focus" aria-labelledby="dropdownMenu1">

                <li >
                  <label>
                    <input type="checkbox" id="male" name="male" value="true"> Male
                  </label>
                </li>

                <li >
                  <label>
                    <input type="checkbox" id="female" name="female" value="true"> Female
                  </label>
                </li>

                <li >
                  <label>
                    <input type="checkbox" id="other" name="other" value="true"> Other
                  </label>
                </li>

              </ul>
            </div>
          </div>
          <div class="col-lg-2 col-md-2 col-sm-12 ">
            <input type="number" class="form-control search-slt" id="minage" name="minage" placeholder="Min Age"/>
          </div>
          <div class="col-lg-2 col-md-2 col-sm-12">
            <input type="number" class="form-control search-slt" id="maxage" name="maxage" placeholder="Max Age"/>
          </div>
          <div class="col-md-3 col-sm-12">
            <button type="submit" class="btn search-btn">Search</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
</section>

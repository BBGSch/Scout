<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="booking-header">
        <h1>
          <%= @training.name.capitalize %> | <%= @training_session.time.strftime("%b %e, %l:%M %p") %>, <%= @training_session.location %>
        </h1>
        <div class="btn btn-primary"> <%= @booking.status ? "confirmed" : unconfirmed %></div>
      </div>
      <div class="book-image">
        <%= cl_image_tag @booking.training.photos.first.key, height: 800, crop: :fill, class: "my-3" %>
      </div>
      <div class="booking-content">
        <span class="badge badge-primary">
          20â‚¬
        </span>
        <p>
          <%= @training.description %>
        </p>
      </div>
      <%= render "reviews/form", booking: @booking %>
      <div > <%= link_to 'Cancel', @booking, method: :delete, class: "btn btn-warning" %></div>
    </div>
  </div>

</div>


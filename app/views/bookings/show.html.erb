<div class="container">
  <div class="col-12 p-0 m-0">
    <%=render 'components/attendees_banner' %>
  </div>
<div class="row">
  <div class="col-12">
    <div class="data-card white training-pic" style="background-size: cover; background-repeat: no-repeat; background-position: center center; background-image: url(<%= cl_image_path @training_session.training.photos.first.key, height: 600, width: 800, crop: :fill %>)">
      <h1><%= @training_session.training.name.capitalize %></h1>
      <h4 style="color: white; text-shadow: 2px 2px black;"><%=@training_session.time.strftime(" %H : %M  %B %e, %Y")%></h4>
        <div class="training-trainer-avatar">
          <%= link_to trainer_path(@training_session.training.user) do %>
          <p><strong>by <%=@training_session.training.user.name %></strong></p>
          <%= cl_image_tag @training_session.training.user.photos.first.key, height: 1000, crop: :fill %>
          <%end%>
          </div>
        </div>
  </div>
<div class="col-md-6 col-sm-12">
  <div class="data-card blue">

    <div id="map"
    class="full-screen-map"
    style="width: 100%; height: 100%;max-width:530px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  </div>
</div>

 <div class="col-md-6 col-sm-12">
  <div class="data-card white">
    <div class="d-flex align-items-space-between flex-column" style="height: 100%;">
      <div><%=@training_session.training.description%></div>
    <div>
   <i class="fas fa-stopwatch"></i> <%= @training_session.training.duration.strftime( "%kh:%Mm" ) %> <br>
   <i class="fas fa-euro-sign"></i> <%= @training_session.price %> <br>
   <i class="fas fa-map-marker"></i> <%= @training_session.location %>
    </div>

      </div>
  </div>
</div>

</div>
</div>










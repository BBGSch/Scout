<%= simple_form_for(@trainingsession, url:  training_training_sessions_path(@training.id)) do |f|%>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :location %>
  <%= f.input :capacity %>
  <%= f.input :time, as: :datetime, html5: true %>
</div>

<div class="form-actions">
  <%= link_to 'Back', training_training_sessions_path(@training), class: "btn" %>
  <%= f.button :submit, class: "btn btn-primary" %>
</div>
<% end %>
